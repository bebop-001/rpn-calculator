<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="number_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/buttonBg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>
    <style name="operation_button" parent="number_button">
        <item name="android:background">@color/operation_button</item>
    </style>
    <style name="math_op_button" parent = "operation_button">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="layoutButtonGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">4</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
